<% if user_signed_in? %>
    <h2><%= current_user.email %></h2>
  <% end %>
<h3>Place Order</h3>
  <table class="table">
    <tr>
      <th>item</th>
      <th>Weight</th>
      <th>quantity</th>
      <th>Price per Kg</th>
      <th>total price</th>
    </tr>

    <% @cart.each do |x|%>
      <tr>
      <td><%= x["name"]%></td>
      <td><%= x["weight"] %><%= x["weight_type"] %></td>
      <td><%= x["quantity"]%></td>
      <td><%= x["price_per_kg"]%></td>
      <td><%= total_price(x["weight"],x["weight_type"],x["quantity"],x["price_per_kg"]) %></td>


      </tr>

    <% end %>

    <tr>
      <td colspan="4"></td>

      <th><%= sum_total(@cart)%></th>
    </tr>
    <tr>
      <td colspan="3"></td>
      <th>Tax(10%)</th>
      <td><%= tax(@cart)%></td>
    </tr>
    <tr>
      <td colspan="3"></td>
      <th>Total to pay</th>
      <th><%= total_to_pay(@cart)%></th>
    </tr>
  </table>
